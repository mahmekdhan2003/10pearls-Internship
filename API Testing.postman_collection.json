{
  "info": {
    "_postman_id": "d1c8e6f0-1234-4567-89ab-abcdef123456",
    "name": "API Testing Assignment",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET Books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/books",
          "host": ["{{base_url}}"],
          "path": ["books"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response is array\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "});",
              "pm.test(\"Failing test example\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.length).to.eql(1000);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST Book",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{randomBookName}}\",\n  \"author\": \"{{randomAuthor}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/books",
          "host": ["{{base_url}}"],
          "path": ["books"]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"randomBookName\", \"Book \" + Math.floor(Math.random()*1000));",
              "pm.variables.set(\"randomAuthor\", \"Author \" + Math.floor(Math.random()*100));"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Book created\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "var response = pm.response.json();",
              "pm.environment.set(\"book_id\", response.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PUT Book",
      "request": {
        "method": "PUT",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{randomBookName}} Updated\",\n  \"author\": \"{{randomAuthor}} Updated\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/books/{{book_id}}",
          "host": ["{{base_url}}"],
          "path": ["books","{{book_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Book updated\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PATCH Book",
      "request": {
        "method": "PATCH",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"author\": \"{{randomAuthor}} Patched\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/books/{{book_id}}",
          "host": ["{{base_url}}"],
          "path": ["books","{{book_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Book patched\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "DELETE Book",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/books/{{book_id}}",
          "host": ["{{base_url}}"],
          "path": ["books","{{book_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Book deleted\", function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://simple-books-api.glitch.me",
      "type": "default"
    },
    {
      "key": "book_id",
      "value": "",
      "type": "default"
    },
    {
      "key": "randomBookName",
      "value": "",
      "type": "default"
    },
    {
      "key": "randomAuthor",
      "value": "",
      "type": "default"
    }
  ]
}
